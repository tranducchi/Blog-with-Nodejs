extends layout

block content

 
    h3.text-center.mb-3  Result Artilce
    .col-lg-10.offset-lg-1
        if(article >0)
        each val in article
            .card.mb-3
                .card-body
                    h4
                        a.card-title(href='/articles/'+ val._id) #{val.title}
                    p.card-text #{val.description}
                    a.btn.btn-primary.btn-sm(href='/articles/' + val._id ) More then >>
        else
            p.alert.alert-warning Key not found !
            a(href='/').text-dark.pl-3
                
                    i.fa.fa-arrow-circle-left Back to home